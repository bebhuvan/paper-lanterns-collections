---
export const prerender = true;

import { getCollection } from 'astro:content';
import Base from '../../layouts/Base.astro';
import { collectionMetadata } from '../../data/collections';

export async function getStaticPaths() {
  const allLetters = await getCollection('letters');

  const collections = new Map();

  allLetters.forEach((letter) => {
    const { collection, collectionTitle, author, period } = letter.data;
    if (!collections.has(collection)) {
      collections.set(collection, {
        id: collection,
        title: collectionTitle,
        author,
        period,
        letters: []
      });
    }
    collections.get(collection).letters.push(letter);
  });

  return Array.from(collections.values()).map((collection) => ({
    params: { collection: collection.id },
    props: { collection }
  }));
}

const { collection } = Astro.props;
const { id, title, author, period, letters } = collection;

// Sort letters by number
const sortedLetters = letters.sort((a, b) => a.data.number - b.data.number);

// Get collection metadata
const metadata = collectionMetadata[id];
---

<Base title={`${author} - ${title} - PaperLanterns.ink`}>
  <!-- Author Hero -->
  <div class="author-hero">
    <nav class="breadcrumb" aria-label="Breadcrumb">
      <ol class="breadcrumb-list">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-separator">/</li>
        <li class="breadcrumb-item breadcrumb-current" aria-current="page">{author}</li>
      </ol>
    </nav>

    <div class="author-info">
      <div class="author-label">{period || 'Historical Collection'}</div>
      <h1 class="author-title">{author}</h1>
      <div class="author-subtitle">{title}</div>

      <div class="author-stats">
        <div class="stat-item">
          <div class="stat-label">Letters</div>
          <div class="stat-value">{letters.length}</div>
        </div>
        {period && (
          <div class="stat-item">
            <div class="stat-label">Period</div>
            <div class="stat-value">{period}</div>
          </div>
        )}
      </div>
    </div>
  </div>

  <!-- Collection About Section (if metadata exists) -->
  {metadata && (metadata.about || metadata.sources) && (
    <div class="collection-about">
      {metadata.about && (
        <div class="about-content">
          <h2 class="about-title">About This Collection</h2>
          <p class="about-text">{metadata.about}</p>
          {metadata.editor && (
            <div class="about-editor">Compiled by: {metadata.editor}</div>
          )}
        </div>
      )}

      {metadata.sources && metadata.sources.length > 0 && (
        <div class="sources-section">
          <h3 class="sources-title">Sources</h3>
          <ul class="sources-list">
            {metadata.sources.map((source) => (
              <li class="source-item">
                <a href={source.url} target="_blank" rel="noopener noreferrer" class="source-link">
                  {source.title}
                  {source.type && <span class="source-type"> ({source.type})</span>}
                </a>
              </li>
            ))}
          </ul>
        </div>
      )}

      {metadata.notes && (
        <div class="about-notes">{metadata.notes}</div>
      )}
    </div>
  )}

  <!-- Letters List -->
  <div class="letters-section">
    <h2 class="section-title">Complete Letters Collection</h2>

    {sortedLetters.map((letter) => (
      <a href={`/${id}/${letter.slug}`} class="letter-item">
        <div class="letter-date">{letter.data.date || 'Undated'}</div>

        <div class="letter-content">
          <h3 class="letter-recipient">{letter.data.title}</h3>
          {letter.data.recipient && (
            <div class="letter-location">To: {letter.data.recipient}</div>
          )}
        </div>

        <div class="letter-number">Letter {letter.data.number}</div>
      </a>
    ))}
  </div>
</Base>

<style>
  /* ==================== AUTHOR HERO ==================== */
  .author-hero {
    grid-column: 1 / -1;
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: var(--grid-gap);
    padding: var(--space-8xl) 0 var(--space-7xl) 0;
    animation: slideUp 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .breadcrumb {
    grid-column: 1 / 13;
    margin-bottom: var(--space-4xl);
  }

  .breadcrumb-list {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    list-style: none;
    font-family: var(--font-sans);
    font-size: var(--text-small);
    font-weight: 500;
  }

  .breadcrumb-item a {
    color: var(--color-text-tertiary);
    text-decoration: none;
    transition: color var(--transition-base);
  }

  .breadcrumb-item a:hover {
    color: var(--color-accent-start);
  }

  .breadcrumb-separator {
    color: var(--color-text-muted);
    font-weight: 300;
  }

  .breadcrumb-current {
    color: var(--color-text-secondary);
    font-weight: 600;
  }

  .author-info {
    grid-column: 4 / 13;
  }

  .author-label {
    font-family: var(--font-sans);
    font-size: var(--text-label);
    letter-spacing: var(--tracking-widest);
    text-transform: uppercase;
    color: var(--color-text-label);
    margin-bottom: var(--space-xl);
    font-weight: 700;
  }

  .author-title {
    font-size: 96px;
    font-weight: 300;
    line-height: 0.9;
    letter-spacing: var(--tracking-tight);
    margin-bottom: var(--space-3xl);
    color: var(--color-text-primary);
  }

  .author-subtitle {
    font-family: var(--font-sans);
    font-size: var(--text-subtitle);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-5xl);
    font-weight: 400;
  }

  .author-stats {
    display: flex;
    gap: var(--space-6xl);
    font-family: var(--font-sans);
  }

  .stat-item {
    display: flex;
    flex-direction: column;
  }

  .stat-label {
    font-size: var(--text-label);
    letter-spacing: var(--tracking-wider);
    text-transform: uppercase;
    color: var(--color-text-label);
    margin-bottom: var(--space-sm);
    font-weight: 700;
  }

  .stat-value {
    font-size: var(--text-title);
    font-weight: 700;
    color: var(--color-accent-start);
    line-height: 1;
  }

  /* ==================== LETTERS LIST ==================== */
  .letters-section {
    grid-column: 1 / -1;
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: var(--grid-gap);
    margin-bottom: var(--space-8xl);
  }

  .section-title {
    grid-column: 1 / -1;
    font-family: var(--font-sans);
    font-size: var(--text-label);
    letter-spacing: var(--tracking-widest);
    text-transform: uppercase;
    color: var(--color-text-primary);
    margin-bottom: var(--space-3xl);
    font-weight: 700;
  }

  .letter-item {
    grid-column: 1 / -1;
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: var(--grid-gap);
    padding: var(--space-4xl) 0;
    border-bottom: 1px solid var(--color-border);
    text-decoration: none;
    transition: all var(--transition-base);
    position: relative;
  }

  .letter-item::before {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 0;
    height: 1px;
    background: linear-gradient(90deg, var(--color-accent-start) 0%, transparent 100%);
    transition: width var(--transition-base);
  }

  .letter-item:hover {
    transform: translateX(8px);
  }

  .letter-item:hover::before {
    width: 100%;
  }

  .letter-date {
    grid-column: 1 / 3;
    font-family: var(--font-sans);
    font-size: var(--text-small);
    color: var(--color-text-tertiary);
    font-weight: 500;
  }

  .letter-content {
    grid-column: 3 / 10;
  }

  .letter-recipient {
    font-size: var(--text-xl);
    font-weight: 500;
    color: var(--color-text-primary);
    margin-bottom: var(--space-sm);
    letter-spacing: var(--tracking-title);
  }

  .letter-location {
    font-family: var(--font-sans);
    font-size: var(--text-tiny);
    color: var(--color-text-tertiary);
    font-weight: 400;
  }

  .letter-number {
    grid-column: 11 / 13;
    text-align: right;
    font-family: var(--font-sans);
    font-size: var(--text-small);
    color: var(--color-accent-start);
    font-weight: 600;
  }

  /* ==================== COLLECTION ABOUT ==================== */
  .collection-about {
    grid-column: 1 / -1;
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: var(--grid-gap);
    padding: var(--space-7xl) 0;
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
    margin-bottom: var(--space-7xl);
  }

  .about-content {
    grid-column: 1 / 8;
  }

  .about-title {
    font-family: var(--font-sans);
    font-size: var(--text-small);
    letter-spacing: var(--tracking-widest);
    text-transform: uppercase;
    color: var(--color-text-label);
    margin-bottom: var(--space-xl);
    font-weight: 700;
  }

  .about-text {
    font-family: var(--font-sans);
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    color: var(--color-text-primary);
    margin-bottom: var(--space-lg);
  }

  .about-editor {
    font-family: var(--font-sans);
    font-size: var(--text-small);
    color: var(--color-text-tertiary);
    font-style: italic;
  }

  .about-notes {
    grid-column: 1 / -1;
    font-family: var(--font-sans);
    font-size: var(--text-small);
    color: var(--color-text-tertiary);
    margin-top: var(--space-xl);
    font-style: italic;
  }

  .sources-section {
    grid-column: 9 / 13;
  }

  .sources-title {
    font-family: var(--font-sans);
    font-size: var(--text-small);
    letter-spacing: var(--tracking-wider);
    text-transform: uppercase;
    color: var(--color-text-label);
    margin-bottom: var(--space-lg);
    font-weight: 700;
  }

  .sources-list {
    list-style: none;
  }

  .source-item {
    margin-bottom: var(--space-md);
  }

  .source-link {
    font-family: var(--font-sans);
    font-size: var(--text-small);
    color: var(--color-accent-start);
    text-decoration: none;
    transition: color var(--transition-base);
  }

  .source-link:hover {
    color: #b85a5e;
  }

  .source-type {
    color: var(--color-text-tertiary);
    font-size: var(--text-tiny);
  }

  /* ==================== RESPONSIVE ==================== */
  @media (max-width: 1100px) {
    .author-title {
      font-size: 72px;
    }

    .letter-item {
      grid-template-columns: 1fr;
    }

    .letter-date,
    .letter-content,
    .letter-number {
      grid-column: 1 / -1;
    }

    .letter-number {
      text-align: left;
      margin-top: var(--space-md);
    }
  }

  @media (max-width: 768px) {
    .author-hero {
      padding: var(--space-7xl) 0 var(--space-4xl) 0;
    }

    .back-link,
    .author-info {
      grid-column: 1 / -1;
    }

    .author-title {
      font-size: 52px;
    }

    .author-stats {
      flex-direction: column;
      gap: var(--space-3xl);
    }

    .about-content,
    .sources-section {
      grid-column: 1 / -1;
    }

    .sources-section {
      margin-top: var(--space-5xl);
    }
  }
</style>
